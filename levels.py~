from gameObject import *
import pygame
from graphicsHandler import *
import random


class Level:
   def __init__(self, gameObjects, width, height):
      self.gameObjects = gameObjects
      self.width = width
      self.height = height   


   def findObjectByName(self, name):
      for o in self.gameObjects:
         if o.debugName == name:
            return o



